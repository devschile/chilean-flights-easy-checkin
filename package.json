{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "start": "npm run serve",
    "build:vue": "vue-cli-service build",
    "functions:install": "netlify-lambda install --config webpack.functions.js functions",
    "functions:build": "netlify-lambda build --config webpack.functions.js functions",
    "build": "run-p build:vue functions:build",
    "lint": "vue-cli-service lint",
    "test:unit": "vue-cli-service test:unit",
    "test": "echo 'no tests'",
    "build-watch": "vue-cli-service build --watch --mode=production",
    "vue:watch": "vue-cli-service build --watch --mode development",
    "server-pwa": "http-server-pwa dist -p 3000 -s --ssl",
    "build-server-pwa": "run-p server-pwa build-watch",
    "lighthouse": "lighthouse-ci https://localhost:3000 --config-path=lighthouse.json",
    "prenetlify-local": "npm run build",
    "netlify-local": "netlify-local serve",
    "server": "run-p vue:watch netlify-local",
    "postinstall": "npm run functions:install"
  },
  "dependencies": {
    "postcss-cssnext": "3.1.0",
    "pwa-asset-generator": "2.1.2",
    "register-service-worker": "1.6.2",
    "rut-helpers": "0.1.1",
    "vee-validate": "3.0.11",
    "vue": "2.6.10",
    "vue-router": "3.1.3",
    "vuex": "3.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@eclass/eslint-config": "1.1.3",
    "@eclass/semantic-release-netlify": "1.0.2",
    "@semantic-release/changelog": "3.0.5",
    "@semantic-release/git": "7.0.18",
    "@types/node": "12.12.7",
    "@vue/cli-plugin-babel": "4.0.5",
    "@vue/cli-plugin-eslint": "4.0.5",
    "@vue/cli-plugin-pwa": "4.0.5",
    "@vue/cli-plugin-unit-jest": "4.0.5",
    "@vue/cli-service": "4.0.5",
    "@vue/eslint-config-standard": "4.0.0",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.3",
    "babel-jest": "24.9.0",
    "caniuse-lite": "1.0.30001010",
    "dotenv-webpack": "1.7.0",
    "eslint": "6.6.0",
    "eslint-config-prettier": "6.5.0",
    "eslint-plugin-array-func": "3.1.3",
    "eslint-plugin-eslint-comments": "3.1.2",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsdoc": "18.0.1",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-sonarjs": "0.5.0",
    "eslint-plugin-standard": "4.0.1",
    "eslint-plugin-vue": "6.0.1",
    "http-server-pwa": "1.0.1",
    "husky": "3.0.9",
    "lighthouse-ci": "1.10.0",
    "lint-staged": "9.4.3",
    "netlify-lambda": "1.6.3",
    "netlify-local": "1.8.2",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1",
    "prettier-standard": "15.0.1",
    "semantic-release": "15.13.30",
    "vue-template-compiler": "2.6.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/standard"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "eslintIgnore": [
    "dist"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "postcss-cssnext": {
        "features": {
          "autoprefixer": false,
          "customProperties": {
            "variables": {
              "color-base": "#2c332d",
              "color-black": "#383d46",
              "color-white": "#ffffff",
              "color-blue": "#67bcf2",
              "color-yellow": "#eaa74c",
              "color-green": "#48ba2b",
              "color-red": "#ff6666",
              "border-radius-base": "6px",
              "font-family-primary": "Prompt, Helvetica, Arial, sans-serif",
              "font-family-normal": "'EB Garamond'"
            }
          },
          "customMedia": {
            "extensions": {
              "--sm-viewport": "(min-width: 24em)",
              "--md-viewport": "(min-width: 46.8em)",
              "--lg-viewport": "(min-width: 50em)",
              "--xl-viewport": "(min-width: 60em)"
            }
          }
        }
      }
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "testMatch": [
      "<rootDir>/(tests/unit/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx))"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.{vue,js}": [
      "vue-cli-service lint",
      "git add"
    ],
    "functions/**/*.js": [
      "eslint --fix",
      "prettier-standard",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "renovate": {
    "automerge": "minor",
    "extends": [
      "config:js-app"
    ]
  }
}
